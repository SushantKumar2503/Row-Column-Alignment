//screen 3
void main(){
  runApp(
    MaterialApp(
       home: Scaffold(
         body: SafeArea(
           child: Container(
             padding: EdgeInsets.symmetric(horizontal: 10,vertical: 40),//this controls the text from going out
             child: Row(
               mainAxisAlignment: MainAxisAlignment.spaceBetween, //gives space between the text
               children: [
               Column(
                 crossAxisAlignment: CrossAxisAlignment.start,
                 children: [
                   Text("To"),
                   Text("The President"),
                   Text("United States"),
                 ],
               ),
               Column(
                 crossAxisAlignment: CrossAxisAlignment.end,  //push towards the right
                 mainAxisAlignment: MainAxisAlignment.end,  //this will push the text to the extreme bottom right
                 children: [
                   Text("From"),
                   Text("Sushant Kumar"),
                   Text("Programming Pathshala"),
                 ],
               ),
             ]),
             margin: EdgeInsets.symmetric(horizontal: 10.0),
             height: 350,
             decoration: BoxDecoration(
               color: Colors.teal,
               borderRadius: BorderRadius.circular(30.0),
               border: Border.all(color:Colors.orange,width: 2),
             ),
           ),
         ),
       ),
    ),
  );
